/* pages/search/search.wxss */
page{
  width: 100%;
  height: 100%;
}
.search{
  background: #03bbd5;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search>input{
  background: #fff;
  width: 90%;
  height: 50rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
  color: #666;
  padding: 0 20rpx;
}

/* list */
.content{
  width: 100%;
  height: 100%;
  background: #f1f1f1;
}
.list{
  padding: 20rpx;
  background: #fff;
  min-height: 120rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}
.list>.title{
  color: #ff9700;
  line-height: 50rpx;
}
.list>.info{
  line-height: 50rpx;
}